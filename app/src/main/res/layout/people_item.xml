<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <!--<ImageView
        android:id="@+id/img_pople_pic"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_male_shadow_fill_circle_512" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_pople_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ibra"
        app:civ_border_width="0.5dp"
        app:civ_border_color="@color/color_gray_dark"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />


    <TextView
        android:id="@+id/txt_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/img_pople_pic"
        android:text="Mark Jacob"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rect_back_blue"
        android:paddingBottom="7dp"
        android:gravity="center"
        android:paddingTop="7dp"
        android:text="Follow"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        />

    <View
        android:id="@+id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txt_people_name"
        android:background="@color/color_gray_light" />
</RelativeLayout>